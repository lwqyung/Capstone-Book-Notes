        <section id="header">
            <div class="container border-bottom my-4">
                <h1 class="text-center">Your Reading List</h1>
                <p class="text-center text-body-primary">The list of books you have read and your thoughts, ratings, etc. of them.</p>
            </div>
        </section>

        <% getTruncatedDate = function( dateval ) {
                let dateStr = "";
                if ( dateval ) {
                    dateStr = dateval.toDateString();
                    dateStr = dateStr.substring( dateStr.indexOf( " " ) + 1 );
                }

                return dateStr;
            } %>